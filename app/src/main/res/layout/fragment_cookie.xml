<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_width="match_parent"
    android:background="@color/cookiesBg"
    android:layout_height="match_parent">

    <include
        android:id="@+id/stats"
        android:visibility="invisible"
        layout="@layout/fragment_cookie_stats"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navPanel"/>

    <include
        android:id="@+id/shop"
        layout="@layout/fragment_cookie_shop"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/navPanel"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navPanel"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/cookies_bottom_navigation"/>

</androidx.constraintlayout.widget.ConstraintLayout>